<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nikichxp.firstapp.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/msgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/pushBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="pushEvent"
        android:text="@string/push_me" />
    
    
    
    <Button
        android:id="@+id/testBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="@string/test" /> 
        
        

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/msgText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:onClick="resetEvent"
        android:text="@string/reset" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pushBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Timer"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>